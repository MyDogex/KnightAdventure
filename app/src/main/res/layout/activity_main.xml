<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/pixel_paisaje">

    <!-- Corazones de vida en la parte superior -->
    <LinearLayout
        android:id="@+id/livesLayout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/heart1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_heart_full"/>

        <ImageView
            android:id="@+id/heart2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_heart_full"/>

        <ImageView
            android:id="@+id/heart3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_heart_full"/>
    </LinearLayout>

    <!-- Imagen del enemigo en la parte superior -->
    <ImageView
        android:id="@+id/enemyImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/enemy"
        android:layout_below="@id/livesLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <!-- Tablero de juego TicTacToe -->
    <GridLayout
        android:id="@+id/ticTacToeBoard"
        android:layout_width="391dp"
        android:layout_height="363dp"
        android:layout_below="@id/enemyImage"
        android:layout_marginTop="20dp"
        android:columnCount="3"
        android:rowCount="3">

        <!-- Los botones de 3x3 -->
        <Button
            android:id="@+id/button00"
            style="@style/GameButton" />

        <Button
            android:id="@+id/button01"
            style="@style/GameButton" />

        <Button
            android:id="@+id/button02"
            style="@style/GameButton" />

        <Button
            android:id="@+id/button10"
            style="@style/GameButton" />

        <Button
            android:id="@+id/button11"
            style="@style/GameButton" />

        <Button
            android:id="@+id/button12"
            style="@style/GameButton" />

        <Button
            android:id="@+id/button20"
            style="@style/GameButton" />

        <Button
            android:id="@+id/button21"
            style="@style/GameButton" />

        <Button
            android:id="@+id/button22"
            style="@style/GameButton" />
    </GridLayout>

    <!-- Imagen del caballero en la parte inferior -->
    <ImageView
        android:id="@+id/knightImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_knight"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <!-- Texto para mostrar el estado del juego -->
    <TextView
        android:id="@+id/livesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vidas: 3"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>
</RelativeLayout>

